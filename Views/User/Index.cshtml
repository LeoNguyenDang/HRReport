@model IEnumerable<HRReport.Controllers.UserRolesViewModel>

<h2>Quản lý danh sách User (HR System)</h2>
<p><a asp-action="Create" class="btn btn-primary">Tạo User mới</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Cấp bậc (Role)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email</td>
                <td>@string.Join(", ", item.Roles)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>